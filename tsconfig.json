{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES5",
    "module": "ES6",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "./dist"],
  "include": ["src"]
}
